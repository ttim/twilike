<div class='block'>
  <p class='reply opacity'><%= comment_movie(movie) %></p>
  
  <%= movie_image_tag(movie, :medium) %>

  <div class='data'>
    <table>
      <tr>
        <td valign='bottom' class = "rating">
          <%= rate_count %>
          <img src='<%= rate_image_path %>'/>
        </td>
        
        <td class = "movie_name">
          <%= movie_href(movie) %>
        </td>
      </tr>
    </table>
  </div>
</div>
